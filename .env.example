# VintageVision Environment Variables
# Copy this to .env and fill in your values

# Project Identity
PROJECT_NAME=vintagevision
DOMAIN=vintagevision.app

# Environment
NODE_ENV=production
PORT=3000
TZ=UTC

# Database Configuration
DATABASE_URL=postgresql://vintagevision:YOUR_DB_PASSWORD@postgres:5432/vintagevision
DB_PASSWORD=YOUR_DB_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379

# MinIO Configuration (S3-Compatible Storage)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=YOUR_MINIO_SECRET_KEY
MINIO_BUCKET_NAME=vintagevision

# Session Configuration
SESSION_SECRET=YOUR_SESSION_SECRET_AT_LEAST_32_CHARS

# OpenAI API
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY

# Google OAuth (Self-Hosted Authentication)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
# Note: Authorized redirect URI in Google Console should be: https://yourdomain.com/api/auth/google

# App URLs
FRONTEND_URL=https://vintagevision.app
API_URL=http://vintagevision_api:3000
