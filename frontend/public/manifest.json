{
  "name": "VintageVision - AI Antique Expert",
  "short_name": "VintageVision",
  "description": "Transform your phone into a world-class antique expert with AI-powered identification and styling suggestions",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#fef3e2",
  "theme_color": "#f59e0b",
  "orientation": "portrait-primary",
  "categories": ["lifestyle", "shopping", "education"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "id": "com.vintagevision.app",
  "icons": [
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Identify",
      "short_name": "Identify",
      "description": "Instantly identify a vintage item",
      "url": "/?action=camera"
    },
    {
      "name": "My Collection",
      "short_name": "Collection",
      "description": "View your saved vintage items",
      "url": "/collection"
    },
    {
      "name": "Wishlist",
      "short_name": "Wishlist",
      "description": "Check your wishlist for new matches",
      "url": "/wishlist"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "display_override": ["standalone", "minimal-ui", "browser"]
}
